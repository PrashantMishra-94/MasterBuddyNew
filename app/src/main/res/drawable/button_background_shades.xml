<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        android:bottom="2dp"
        android:left="2dp">
        <shape>
            <gradient android:angle="270"
                android:endColor="#3b2dff" android:startColor="#FF3126C9" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item
        android:state_pressed="false"
        android:bottom="2dp"
        android:left="2dp">
        <shape>
            <gradient android:angle="270"
                android:endColor="#FF3126C9" android:startColor="#3b2dff" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>